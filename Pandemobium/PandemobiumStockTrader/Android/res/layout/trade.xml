<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <TableLayout 	android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:stretchColumns="1">
  	<TableRow android:layout_width="fill_parent">
  		<TextView android:text="Symbol" />
  		<EditText android:id="@+id/et_symbol" />
  	</TableRow>
  	<TableRow android:layout_width="fill_parent">
  		<Button android:layout_span="2"
  				android:text="Get Quote"
  				android:id="@+id/btn_get_quote" />
  	</TableRow>
  	<TableRow android:layout_width="fill_parent">
  		<TextView 	android:layout_span="2"
  					android:id="@+id/tv_current_quote" />
  	</TableRow>
  	<TableRow android:layout_width="fill_parent">
  		<TextView android:text="Shares" />
  		<EditText android:id="@+id/et_shares" />
  	</TableRow>
  	<TableRow android:layout_width="fill_parent">
  		<Button	android:layout_span="2"
  				android:text="Buy"
  				android:id="@+id/btn_trade" />
  	</TableRow>
  	<TableRow android:layout_width="fill_parent">
  		<TextView 	android:layout_span="2"
  					android:id="@+id/tv_trade_results" />
  	</TableRow>
  </TableLayout>
</LinearLayout>
