<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dibsyhex.droid10.vectoractivities.XSSVectors"
    android:orientation="vertical"
    android:background="@drawable/bluetheme">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_xssvectors"
        android:layout_gravity="center"
        style="@style/CoolText"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Vectors"
        android:id="@+id/btn_viewxssvectors"
        style="@style/CoolText"
        android:background="@drawable/bluetheme"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Vector"
        android:inputType="textMultiLine"
        android:id="@+id/edttxt_vector"
        style="@style/CoolText"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btn_addxssvectors"
        style="@style/CoolText"
        android:background="@drawable/bluetheme"/>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Vector ID"
        android:id="@+id/edttxt_id"
        style="@style/CoolText"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btn_deletexssvectors"
        style="@style/CoolText"
        android:background="@drawable/bluetheme"/>


</LinearLayout>
