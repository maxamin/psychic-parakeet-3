<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.dibsyhex.droid10.CrossSiteScriptingScanActivity"
    android:background="@drawable/bluetheme">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xss"
        style="@style/CoolText"
        android:layout_gravity="center" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the url"
        android:id="@+id/url"
        style="@style/CoolText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_hack"
        android:text="Test"
        android:layout_gravity="center" />
    <WebView
        android:layout_width="fill_parent"
        android:layout_height="300dp"></WebView>
 </LinearLayout>
