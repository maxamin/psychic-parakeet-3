extends ../../layout

block content
  form(action="", method="post")
    if (!loggedInUser)
      h1 Login
      include ../../flash
      p: input(type="text",name="username", placeholder="Username")
      p: input(type="password",name="password", placeholder="Password")
      p: input(type="submit",value="login").btn.btn-primary
    else
      h1 My Account
      .alert.alert-success You have logged in successfully
      table.table
        tr
          td(width="150px") User:
          td #{loggedInUser.firstName} #{loggedInUser.lastName} (#{loggedInUser.username})
        tr
          td Account Type:
          td #{loggedInUser.isAdmin}
        tr
          td
          td: a(href="/xml/#{level}/") Logout
